<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DF000000"
    android:id="@+id/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/solution_area">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#959595"
            android:textSize="60dp"
            android:textAlignment="textEnd"
            android:padding="10dp"
            android:id="@+id/solution_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/buttons_layout"
        android:layout_below="@+id/solution_area"
        android:id="@+id/result_area">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="80dp"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:padding="10dp"
            android:id="@+id/result_text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingBottom="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="C"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_clear"
                android:backgroundTint="@color/operator_button_color"

                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="("
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_open_interval"
                android:backgroundTint="@color/operator_button_color"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text=")"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_close_interval"
                android:backgroundTint="@color/operator_button_color"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="/"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/operator_button_color"
                android:id="@+id/btn_divide_operator"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_7"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="8"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_8"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="9"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_9"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="*"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/operator_button_color"
                android:id="@+id/btn_multiply_operator"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_4"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="5"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_5"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="6"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_6"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="+"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/operator_button_color"
                android:id="@+id/btn_plus_operator"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="1"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_1"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="2"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_2"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="3"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_3"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="-"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/operator_button_color"
                android:id="@+id/btn_minus_operator"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="AC"
                android:textSize="26sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_all_clear"
                android:backgroundTint="@color/operator_button_color"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="0"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_0"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="."
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_dot"
                android:backgroundTint="@color/operator_button_color"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="="
                android:textSize="30sp"
                app:cornerRadius="100dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/operator_button_color"
                android:id="@+id/btn_result"/>


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>